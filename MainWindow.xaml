<Window x:Class="ThingsDoTo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThingsDoTo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="579" Closing="CloseWindow">
    <Window.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource"  CollectionViewType="ListCollectionView"/>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Wydarzenia">
                    <MenuItem Header="Dodaj wydarzenie" Click="openAddEventWindow"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <DataGrid DataContext="{StaticResource ItemCollectionViewSource}"   x:Name="dataGrid" ItemsSource="{Binding}"  HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch" >

        </DataGrid>

    </Grid>
</Window>
