<Window x:Class="ThingsDoTo.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThingsDoTo"
        mc:Ignorable="d"
        Title="AddEvent"  ResizeMode="CanResize" SizeToContent="WidthAndHeight">
    <Grid x:Name="grid">
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="30,20,30,20" VerticalAlignment="Top" Width="120" SelectionChanged="updateInput">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <StackPanel>
            <StackPanel x:Name="infoInput" HorizontalAlignment="Stretch" Margin="10,45,10,0" VerticalAlignment="Stretch" />
            <Button x:Name="button" Content="Dodaj" HorizontalAlignment="Left" Margin="30,10,0,10" VerticalAlignment="Top" Width="75" Click="Save"/>
        </StackPanel>





    </Grid>
</Window>
